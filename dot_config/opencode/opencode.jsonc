{
  "$schema": "https://opencode.ai/config.json",
  "autoshare": false,
  "autoupdate": false,
  "enabled_providers": ["github-copilot"],
  "keybinds": {
    "leader": "\\",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+shift+g",
    "messages_next": "ctrl+y",
    "messages_previous": "ctrl+shift+y"
  },
  "share": "disabled",
  "snapshot": false,
  "theme": "tokyonight",
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  }
}
